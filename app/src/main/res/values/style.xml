<?xml version="1.0" encoding="utf-8"?>
<resources>
    // General
    <style name="style_common_button">
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/pink_purple</item>
        <item name="android:layout_marginBottom">@dimen/common_styled_button_margin_vertical</item>
        <item name="android:layout_marginTop">@dimen/common_styled_button_margin_vertical</item>
    </style>
    // Card
    <style name="cardTitle">
        <item name="android:layout_marginStart">@dimen/margin10</item>
        <item name="android:layout_marginEnd">@dimen/margin10</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/purple_movie</item>
        <item name="android:textSize">@dimen/big_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cardId">
        <item name="android:layout_marginStart">@dimen/margin10</item>
        <item name="android:layout_marginTop">@dimen/margin10</item>
        <item name="android:textColor">@color/purple_movie</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cardShowPopularity">
        <item name="android:layout_marginTop">@dimen/margin10</item>
        <item name="android:layout_marginEnd">@dimen/margin10</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="cardShowOverview">
        <item name="android:layout_marginStart">@dimen/margin10</item>
        <item name="android:layout_marginEnd">@dimen/margin10</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/purple_movie</item>
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="cardActorPopularity">
        <item name="android:layout_marginStart">@dimen/margin10</item>
        <item name="android:textColor">@color/purple_movie</item>
        <item name="android:textSize">@dimen/big_text</item>
    </style>

    <style name="cardDepartment">
        <item name="android:layout_marginStart">@dimen/margin10</item>
        <item name="android:layout_marginEnd">@dimen/margin10</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/purple_movie</item>
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="subtitle">
        <item name="android:textSize">@dimen/dialog_message_text_size</item>
        <item name="android:layout_marginTop">@dimen/margin10</item>
        <item name="android:textColor">@color/purple_movie</item>
        <item name="android:textStyle">bold</item>
    </style>

    // Exception

    <style name="style_exception_dialog_title_text_view">
        <item name="android:padding">@dimen/exception_dialog_title_padding</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <dimen name="exception_dialog_title_padding">25dp</dimen>
</resources>